<div class="flash">
	<%= flash[:notice] %>
</div>

<h1>Books</h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
            <tr>
                <td><%= book.title %></td>
                <td><%= book.body %></td>
                <td><%= link_to "Show", book_path(book), class: "link" %></td>
                <td><%= link_to "Edit", edit_book_path(book), class: "link" %></td>
                <td><%= link_to "Destroy", book_path(book), class: "link", method: :delete, "data-confirm" => "Are you sure?" %></td>
            </tr>
        <% end %>
    </tbody>
</table>

